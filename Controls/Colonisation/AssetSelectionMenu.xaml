             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ODEliteTracker.Controls.Colonisation"
             xmlns:colonisationVM="clr-namespace:ODEliteTracker.ViewModels.ModelViews.Colonisation"
             mc:Ignorable="d" 
             x:Name="Root"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ToggleButton Style="{DynamicResource EliteSytleImageToggleBtn}"
                      IsChecked="{Binding ElementName=Root, Path=IsChecked}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      x:Name="BuildBtn"
                      ToolTip="Select Build"
                      Margin="10,10"
                      Width="35"
                      Height="35">
            <Image Source="/Assets/Notifications/Stations/Construction.png" />
        </ToggleButton>

