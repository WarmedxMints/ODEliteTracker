                              CommandParameter="{x:Static colonisationVM:ColonisationBuild.OutpostP}" />
                    <MenuItem Header="Outpost"
                              Command="{Binding ElementName=Root, Path=Command}"
                              CommandParameter="{x:Static colonisationVM:ColonisationBuild.Outpost}" />
