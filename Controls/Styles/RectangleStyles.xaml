<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:colonisationModel="clr-namespace:ODEliteTracker.Models.Colonisation.Builds">

    <Style x:Key="PowerPlayIcon"
           TargetType="{x:Type Rectangle}">
        <Style.Triggers>
            <DataTrigger Binding="{Binding Power}"
                         Value="Aisling Duval">
                <Setter Property="Fill"
                        Value="#0099ff" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Power}"
                         Value="Archon Delaine">
                <Setter Property="Fill"
                        Value="#7fff00" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Power}"
                         Value="A. Lavigny-Duval">
                <Setter Property="Fill"
                        Value="#7f00ff" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Power}"
                         Value="Denton Patreus">
                <Setter Property="Fill"
                        Value="#00ffff" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Power}"
                         Value="Edmund Mahon">
                <Setter Property="Fill"
                        Value="#00ff00" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Power}"
                         Value="Felicia Winters">
                <Setter Property="Fill"
                        Value="#ff7f00" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Power}"
                         Value="Li Yong-Rui">
                <Setter Property="Fill"
                        Value="#bfff00" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Power}"
                         Value="Pranav Antal">
                <Setter Property="Fill"
                        Value="#ffff00" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Power}"
                         Value="Zachary Hudson">
                <Setter Property="Fill"
                        Value="#ff0000" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Power}"
                         Value="Zemina Torval">
                <Setter Property="Fill"
                        Value="#0040ff" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Power}"
                         Value="Yuri Grom">
                <Setter Property="Fill"
                        Value="#E4763E" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Power}"
                         Value="Nakato Kaine">
                <Setter Property="Fill"
                        Value="#A8DC53" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Power}"
                         Value="Jerome Archer">
                <Setter Property="Fill"
                        Value="#CF0DCE" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="{x:Type Rectangle}"
           x:Key="AssetEconomyRectange">
        <Style.Triggers>
            <DataTrigger Binding="{Binding Economy}"
                         Value="{x:Static colonisationModel:AssetEconomy.None}">
                <Setter Property="Visibility"
                        Value="Collapsed" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Economy}"
                         Value="{x:Static colonisationModel:AssetEconomy.Agriculture}">
                <Setter Property="Fill"
                        Value="#FF80FF00" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Economy}"
                         Value="{x:Static colonisationModel:AssetEconomy.Colony}">
                <Setter Property="Fill"
                        Value="#FF969696" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Economy}"
                         Value="{x:Static colonisationModel:AssetEconomy.Extraction}">
                <Setter Property="Fill"
                        Value="Red" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Economy}"
                         Value="{x:Static colonisationModel:AssetEconomy.Industrial}">
                <Setter Property="Fill"
                        Value="Yellow" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Economy}"
                         Value="{x:Static colonisationModel:AssetEconomy.HighTech}">
                <Setter Property="Fill"
                        Value="Cyan" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Economy}"
                         Value="{x:Static colonisationModel:AssetEconomy.Military}">
                <Setter Property="Fill"
                        Value="#FFE500E5" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Economy}"
                         Value="{x:Static colonisationModel:AssetEconomy.Refinery}">
                <Setter Property="Fill"
                        Value="#FFFF8000" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Economy}"
                         Value="{x:Static colonisationModel:AssetEconomy.Service}">
                <Setter Property="Fill"
                        Value="#FF0045FF" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Economy}"
                         Value="{x:Static colonisationModel:AssetEconomy.Tourism}">
                <Setter Property="Fill"
                        Value="#FF6600E5" />
            </DataTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>