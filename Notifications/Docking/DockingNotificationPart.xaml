<core:NotificationDisplayPart  xmlns:core="clr-namespace:ToastNotifications.Core;assembly=ToastNotifications"
                               x:Class="ODEliteTracker.Notifications.Docking.DockingNotificationPart"
                               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                               xmlns:local="clr-namespace:ODEliteTracker.Notifications.Docking"
                               mc:Ignorable="d"
                               Foreground="{DynamicResource NotificationForeground}"
                               FontSize="{Binding Options.FontSize}"
                               d:DataContext="{d:DesignInstance local:DockingNotification}"
                               d:DesignHeight="450"
                               d:DesignWidth="800">
    <Border Style="{Binding BorderStyle}"
            BorderThickness="{Binding BorderThickness}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <Rectangle Fill="{DynamicResource NotificationForeground}"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       Grid.RowSpan="10">
                <Rectangle.OpacityMask>
                    <ImageBrush  Stretch="Uniform"
                                 ImageSource="/Assets/Icons/docking.png" />
                </Rectangle.OpacityMask>
            </Rectangle>

            <TextBlock Text="{Binding Message}"
                       TextWrapping="Wrap"
                       Grid.Column="1"
                       FontSize="{Binding HeaderFontSize}"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       Grid.Row="0"
                       Margin="5,5"
                       Foreground="{DynamicResource NotificationHeaderColour}" />

            <TextBlock Grid.Row="1"
                       Grid.Column="1"
                       Margin="5,10"
                       VerticalAlignment="Center"
                       Text="{Binding Reason}" />
        </Grid>
    </Border>
</core:NotificationDisplayPart>

