<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="NotifcationBorder"
                     Color="#FF2D2D2D" />
    <SolidColorBrush x:Key="NotificationForeground"
                     Color="#FF2C2C2C" />
    <SolidColorBrush x:Key="NotificationHeaderColour"
                     Color="Black" />

    <Style x:Key="NotificationBorderStyle"
           TargetType="{x:Type Border}">
        <Setter Property="BorderBrush"
                Value="{DynamicResource NotifcationBorder}" />
        <Setter Property="Margin"
                Value="0,5" />
        <Setter Property="CornerRadius"
                Value="0" />
        <Setter Property="Padding"
                Value="10" />
        <Setter Property="Background"
                Value="#FFFBFBFB" />
    </Style>

    <Style x:Key="NotificationBorderStyleLeft"
           TargetType="{x:Type Border}">
        <Setter Property="BorderBrush"
                Value="{DynamicResource NotifcationBorder}" />
        <Setter Property="Margin"
                Value="0,5" />
        <Setter Property="CornerRadius"
                Value="0" />
        <Setter Property="Padding"
                Value="10" />
        <Setter Property="Background"
                Value="#FFFBFBFB" />
    </Style>
</ResourceDictionary>