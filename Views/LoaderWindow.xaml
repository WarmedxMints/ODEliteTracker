<views:ODWindowBase x:Class="ODEliteTracker.Views.LoaderWindow"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:local="clr-namespace:ODEliteTracker.Views"
                    xmlns:views="clr-namespace:ODMVVM.Views;assembly=ODMVVM"
                    mc:Ignorable="d"
                    WindowStyle="None"
                    FontFamily="{StaticResource Eurostile}"
                    AllowsTransparency="True"
                    Background="Transparent"
                    Height="450"
                    Width="450"
                    WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <DropShadowEffect x:Key="shadow"
                          Opacity="1"
                          BlurRadius="500"
                          Color="#FFBE6A1D" />
    </Window.Resources>
    <Grid HorizontalAlignment="Center"
          VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Image Source="/Assets/Images/elite-dangerous-clean.png"
               VerticalAlignment="Center"
               Grid.RowSpan="4"
               Height="280"
               x:Name="Logo"
               Effect="{StaticResource shadow}"
               HorizontalAlignment="Center"
               SnapsToDevicePixels="True"
               Stretch="Uniform">
            <Image.Triggers>
                <EventTrigger RoutedEvent="Image.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="Logo"
                                             Storyboard.TargetProperty="Effect.Opacity"
                                             From="1.0"
                                             To="0.4"
                                             Duration="0:0:1"
                                             AutoReverse="True"
                                             RepeatBehavior="Forever" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Image.Triggers>
        </Image>


        <Image Source="/Assets/Images/OD.png"
               Height="200"
               Grid.RowSpan="2"
               SnapsToDevicePixels="True"
               VerticalAlignment="Top"
               HorizontalAlignment="Center"
               Stretch="Uniform"
               Margin="0,20,0,0">
        </Image>

        <TextBlock Text="ELITE TRACKER"
                   FontSize="30"
                   Effect="{DynamicResource shadow}"
                   Foreground="{DynamicResource PrimaryForeground}"
                   HorizontalAlignment="Center"
                   Grid.Row="2" />
        <TextBlock Text="{Binding StatusText}"
                   FontSize="20"
                   Effect="{DynamicResource shadow}"
                   Foreground="{DynamicResource PrimaryForeground}"
                   HorizontalAlignment="Center"
                   Grid.Row="3" />
    </Grid>
</views:ODWindowBase>
