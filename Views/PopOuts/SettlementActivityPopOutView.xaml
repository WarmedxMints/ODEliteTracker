<UserControl x:Class="ODEliteTracker.Views.PopOuts.SettlementActivityPopOutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ODEliteTracker.Views.PopOuts"
             xmlns:popouts="clr-namespace:ODEliteTracker.ViewModels.PopOuts"
             xmlns:busyIndicator="https://github.com/moh3ngolshani/BusyIndicator"
             d:DataContext="{d:DesignInstance popouts:SettlementActivityPopOutVM}"
             mc:Ignorable="d" 
             d:DesignHeight="220" d:DesignWidth="400">
    <busyIndicator:BusyMask x:Name="BusyIndicator"
                            IsBusy="{Binding IsBusy}"
                            Background="{DynamicResource Overlay_CardBackground}"
                            Foreground="{DynamicResource Overlay_ForegroundBrush}"
                            FontSize="30"
                            BusyContent="Parsing Colonisation Logs"
                            IndicatorType="Cupertino"
                            BusyContentMargin="0,20,0,0">
        <Border CornerRadius="5"
                Grid.Row="2"
                Padding="5">
            <Border.Background>
                <SolidColorBrush Color="{DynamicResource Overlay_CardBackGrounColour}"
                                 Opacity="{Binding Opacity, Mode=OneWay}" />
            </Border.Background>
            <Grid TextBlock.FontSize="18">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Text="Settlement Name"
                           Margin="0,5"
                           Grid.Column="0"
                           Grid.Row="0" />
                <TextBlock Text="{Binding SettlementActivityVM.SettlementName}"
                           Margin="0,5"
                           Grid.Column="1"
                           Grid.Row="0" />

                <TextBlock Text="Kills"
                           Margin="0,5"
                           Grid.Column="0"
                           Grid.Row="1" />
                <TextBlock Text="{Binding SettlementActivityVM.KillCount}"
                           Margin="0,5"
                           Grid.Column="1"
                           Grid.Row="1" />

                <TextBlock Text="Activity Type"
                           Margin="0,5"
                           Grid.Column="0"
                           Grid.Row="2" />
                <TextBlock Text="{Binding SettlementActivityVM.Activity}"
                           Margin="0,5"
                           Grid.Column="1"
                           Grid.Row="2" />

                <TextBlock Text="Victim Faction"
                           Margin="0,5"
                           Grid.Column="0"
                           Grid.Row="3" />
                <TextBlock Text="{Binding SettlementActivityVM.VictimFaction}"
                           Margin="0,5"
                           Grid.Column="1"
                           Grid.Row="3" />

                <TextBlock Text="Supprting Faction"
                           Margin="0,5"
                           Visibility="{Binding SettlementActivityVM.DisplayBonds}"
                           Grid.Column="0"
                           Grid.Row="4" />
                <TextBlock Text="{Binding SettlementActivityVM.SupportingFaction}"
                           Margin="0,5"
                           Visibility="{Binding SettlementActivityVM.DisplayBonds}"
                           Grid.Column="1"
                           Grid.Row="4" />

                <TextBlock Text="Total Bonds"
                           Margin="0,5"
                           Visibility="{Binding SettlementActivityVM.DisplayBonds}"
                           Grid.Column="0"
                           Grid.Row="5" />
                <TextBlock Text="{Binding SettlementActivityVM.TotalBonds}"
                           Margin="0,5"
                           Visibility="{Binding SettlementActivityVM.DisplayBonds}"
                           Grid.Column="1"
                           Grid.Row="5" />
            </Grid>
        </Border>
    </busyIndicator:BusyMask>
</UserControl>
